@import 'normalize'

body
	background #fafafa
	font-family 'Open Sans'
	font-size 16px

header
	background #333
	color #eaeaea
	padding 0.5em
	text-align center
	h1
		margin 0
		padding 0
	h2
		font-style italic
		font-size 1.1em

.main
	margin 1em 
	text-align center
	
	fieldset
		border 0
		label, input
			display inline-block
			width 200px

		input
			border-radius 5px

