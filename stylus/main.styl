@import 'normalize'
@import 'fonts'

body
	background #fafafa
	font-family 'Open Sans'
	font-size 16px

header
	background url('http://techchurian.files.wordpress.com/2013/07/hackers_security_password-100004008-orig1.jpg') #333
	background-size cover
	border-bottom 3px solid #00A352
	color #eaeaea
	padding 0.5em
	text-align center
	h1
		margin 0
		padding 0
	h2
		font-style italic
		font-size 1.1em

footer
	color #aaa
	font-size .8em
	text-align center

nav
	background #00A352
	border-bottom-left-radius 5px
	border-bottom-right-radius 5px
	margin 0 auto
	padding .5em 0
	text-align center
	width 250px
	a
		color #eaeaea
		font-size .9em
		text-decoration none

	

.main
	margin .5em 
	text-align center

	form
		border-bottom 1px dashed #ccc
		margin 2em 0
	
	fieldset
		border 0
		label, input
			display inline-block
			width 250px
		label
			font-weight bold

		input
			border-radius 5px
			box-sizing border-box
			padding .75em
			outline 0

		input[type='text'], input[type='password']
			border 1px solid #ccc
			box-shadow 0 0 10px rgba(204,204,204,0.5) inset
			color #ccc
			transition .3s border-color
			&:focus
				border 1px solid orange
				color #333
				outline 0

		.btn
			background #00A352
			border 0
			border-bottom 4px solid #00A352 - 30
			border-radius 5px
			color #eaeaea
			display inline-block
			padding .75em
			text-decoration none
			width 250px
			span
				margin 0 .7em
		#genpass
			background #BAF2D6 
			color #BAF2D6 - 30
			border 1px solid #BAF2D6 - 30
			border-radius 5px  
			padding .5em

#viewCodesCard
	table
		border-collapse separate !important
		border 1px solid #00A352
		border-radius 5px
		margin 2em auto
		th 
			background #00A352
			color #eaeaea
			border-top-left-radius 4px
			border-top-right-radius 4px
		tr:nth-child(odd)
			background #ddd
		td 
			padding .5em
		td.cel
			background #00A352
			color #eaeaea
				
	
